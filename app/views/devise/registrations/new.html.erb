<div class="card">
  <div class="card-block">

    <h2>Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="row">

          <div class="col-md-6">

            <div class="form-group">
              <%= f.email_field :email, autofocus: true, placeholder: "Email", class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.text_field :name, placeholder: "Name", class: 'form-control' %>
            </div>

          </div>

          <div class="col-md-6">

            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", placeholder: "Password, 6 Character Minimum", class:
                  'form-control' %>
              <% if @minimum_password_length %>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Re-Type Password", class: 'form-control' %>
            </div>

          </div>

          <div class="col-md-6"></div>
          <div class="col-md-3">

            <div class="form-group">
              <%= f.submit "Sign up", class: 'btn btn-primary btn-block' %>
            </div>
          </div>
          <div class="col-md-3">

            <div class="auth-links register-text">
              <%= render "devise/shared/links" %>
            </div>
          </div>

        <% end %>

  </div>
</div>


