<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <meta name="keywords" content="<%= @seo_keywords %>" />

    <%= favicon_link_tag 'favicons/favicon.ico' %>

    <%= stylesheet_link_tag 'about', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'flaticon', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'contact-click', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'name-app', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

        <%= render "shared/application_nav" %>

      <%= video_tag(
              'background.mp4',
              id: 'background',
              class: 'stretch',
              autoplay: true,
              loop: true,
              muted: true,
              poster: 'water.jpeg'
          )
      %>
          <%= yield %>

          <%= render "shared/contact_footer" %>

          <%= alerts %>
  </body>
</html>
